name: Release kubectl-frisbee

on:
  workflow_dispatch:
    
  push:
    tags:
      - "v[0-9]+.[0-9]+.[0-9]+"



jobs:
  pre_build:
    name: Pre-build
    runs-on: ubuntu-latest
    strategy:
      matrix:
        include:
          - name: "linux"
            path: .builds-linux.goreleaser.yml
          #- name: "windows"
          #  path: .builds-windows.goreleaser.yml
          #- name: "darwin"
          #  path: .builds-darwin.goreleaser.yml
    steps:
      - name: Checkout
        uses: actions/checkout@v3
        with:
          fetch-depth: 0
      - name: Set up Go
        uses: actions/setup-go@v2
        with:
          go-version: 1.18
      - name: Go Cache
        uses: actions/cache@v2
        with:
          path: |
            ~/go/pkg/mod
            ~/.cache/go-build
          key: ${{ runner.os }}-go-${{ hashFiles('**/go.sum') }}
          restore-keys: |
            ${{ runner.os }}-go-
      - name: Run GoReleaser
        uses: goreleaser/goreleaser-action@v2
        with:
          distribution: goreleaser-pro
          version: latest
          args: release -f ${{ matrix.path }} #--skip-publish
        env:
          GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}
          
      #- name: Upload Artifacts
      #  uses: actions/upload-artifact@master
      #  with:
      #    name: testkube_${{ matrix.name }}
      #    path: |
      #      ${{ matrix.name }}/frisbee_${{ matrix.name }}_*
      #    retention-days: 1
